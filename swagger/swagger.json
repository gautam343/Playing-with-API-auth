{
  "openapi": "3.0.3",
  "info": {
    "title": "Employee CRUD API (OAuth2)",
    "version": "1.0.0",
    "description": "Employee CRUD API secured with OAuth2 (in-memory Authorization Server). For testing: password and client_credentials grants."
  },
  "servers": [{ "url": "http://localhost:3000" }],
  "components": {
    "securitySchemes": {
      "oauth2": {
        "type": "oauth2",
        "flows": {
          "password": {
            "tokenUrl": "http://localhost:3000/oauth/token",
            "scopes": {
              "read": "read access",
              "write": "write access"
            }
          },
          "clientCredentials": {
            "tokenUrl": "http://localhost:3000/oauth/token",
            "scopes": {
              "read": "read access",
              "write": "write access"
            }
          }
        }
      }
    },
    "schemas": {
      "Employee": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string" },
          "position": { "type": "string" },
          "department": { "type": "string" },
          "salary": { "type": "number" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "EmployeeInput": {
        "type": "object",
        "required": ["name","email","position","department","salary"],
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "position": { "type": "string" },
          "department": { "type": "string" },
          "salary": { "type": "number" }
        }
      }
    }
  },
  "security": [{ "oauth2": ["read", "write"] }],
  "paths": {
    "/health": {
      "get": { "responses": { "200": { "description": "OK" } } }
    },
    "/oauth/token": {
      "post": {
        "summary": "OAuth2 token endpoint (password & client_credentials grants)",
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "grant_type": { "type": "string" },
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "client_id": { "type": "string" },
                  "client_secret": { "type": "string" },
                  "scope": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Token response" } }
      }
    },
    "/employees": {
      "get": {
        "summary": "List employees",
        "security": [{ "oauth2": ["read"] }],
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthorized" } }
      },
      "post": {
        "summary": "Create employee",
        "security": [{ "oauth2": ["write"] }],
        "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/EmployeeInput" } } } },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/employees/{id}": {
      "get": {
        "summary": "Get employee",
        "security": [{ "oauth2": ["read"] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "OK" }, "404": { "description": "Not found" } }
      },
      "put": {
        "summary": "Replace employee",
        "security": [{ "oauth2": ["write"] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/EmployeeInput" } } } },
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "summary": "Delete employee",
        "security": [{ "oauth2": ["write"] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "204": { "description": "Deleted" } }
      }
    }
  }
}
